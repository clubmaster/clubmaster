{% extends "::base.html.twig" %}

{% block header %}<h1>Category</h1>{% endblock %}

{% block body %}

<p class="box"><a href="{{ path('admin_shop_category_new') }}" class="btn-create"><span>Create category</span></a></p>

{% include "::flash.html.twig" %}

<form method="post" action="{{ path('admin_shop_category_batch') }}">
<table>
  <thead>
    <tr>
      <th>[x]</th>
      <th>Id</th>
      <th>Category</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tfoot>
    <tr class="bg">
      <td colspan="4" class="arrow-01">
        <select name="" class="input-text">
          <option value="">Delete selected</option>
          <option value="">Remove selected</option>
          <option value="">Rename selected</option>
          <option value="">Copy selected</option>
        </select>&nbsp;<input type="submit" value="OK" />
      </td>
    </tr>
  </tfoot>
  <tbody>
  {% for category in categories %}
    <tr>
      <td><input type="checkbox" /></td>
      <td>{{ category.id }}</td>
      <td>{{ category.categoryName }}</td>
      <td>
        {% include "::edit_link.html.twig" with {'url':path('admin_shop_category_edit', { 'id':category.id })} %}
        {% include "::delete_link.html.twig" with {'url':path('admin_shop_category_delete', { 'id':category.id })} %}
      </td>
    </tr>
  {% else %}
  <tr>
    <td colspan="4">There are no categories at the time</td>
  </tr>
  {% endfor %}
  </tbody>
</table>
</form>
{% endblock %}
