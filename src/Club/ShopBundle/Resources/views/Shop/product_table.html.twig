<h3>{% trans %}Products{% endtrans %}</h3>

{{ club_paginator() }}

<table class="table">
    <thead>
        <th width="25">&#160;</th>
        <th>{% trans %}Product name{% endtrans %}</th>
        <th width="80">{% trans %}Price{% endtrans %}</th>
        <th class="action">{% trans %}Action{% endtrans %}</th>
    </thead>
    <tbody>
    {% for product in paginator %}
    <tr>
        {% if product.image %}
        <td><img src="{{ asset(product.image.webpath) }}" title="{% trans %}Product image{% endtrans %}" alt="{% trans %}Product image{% endtrans %}" /></td>
        {% else %}
        <td><img src="{{ asset('bundles/clublayout/images/icons/32x32/page_white_camera.png') }}" title="{% trans %}No image{% endtrans %}" alt="{% trans %}No image{% endtrans %}" /></td>
        {% endif %}
        <td><a href="{{ path('shop_product', {'id':product.id}) }}">{{ product.productName }}</a> <em>{{ product.description|truncate(200) }}</em></td>
        <td>{{ product.specialPrice|club_price }}</td>
        <td><a href="{{ path('shop_product_cart', {'id':product.id}) }}"><img src="{{ asset('bundles/clublayout/images/icons/32x32/cart.png') }}" alt="{% trans %}Put in cart{% endtrans %}" title="{% trans %}Put in cart{% endtrans %}" /></a></td>
    </tr>
    {% else %}
    <tr>
        <td colspan="4">{% trans %}There is no products in this category.{% endtrans %}</td>
    </tr>
    {% endfor %}
    </tbody>
</table>

{{ club_paginator() }}
