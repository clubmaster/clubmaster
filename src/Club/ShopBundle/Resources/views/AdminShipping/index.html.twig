{% extends "ClubLayoutBundle:Default:base.html.twig" %}

{% block header %}<h1>Shipping</h1>{% endblock %}

{% block body %}

<p class="box"><a href="{{ path('admin_shop_shipping_new') }}" class="btn-create"><span>Create shipping</span></a></p>

<form method="post" action="{{ path('admin_shop_shipping_batch') }}">
<table>
  <thead>
    <tr>
      <th>[x]</th>
      <th>Id</th>
      <th>Shipping</th>
      <th>Price</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tfoot>
    <tr class="bg">
      <td colspan="5" class="arrow-01">
        <select name="" class="input-text">
          <option value="">Delete selected</option>
          <option value="">Remove selected</option>
          <option value="">Rename selected</option>
          <option value="">Copy selected</option>
        </select>&nbsp;<input type="submit" value="OK" />
      </td>
    </tr>
  </tfoot>
  <tbody>
  {% for shipping in shippings %}
    <tr>
      <td><input type="checkbox" /></td>
      <td>{{ shipping.id }}</td>
      <td>{{ shipping.shippingName }}</td>
      <td>{{ shipping.price }}</td>
      <td>
        {% include "ClubLayoutBundle:Default:edit_link.html.twig" with {'url':path('admin_shop_shipping_edit', { 'id':shipping.id })} %}
        {% include "ClubLayoutBundle:Default:delete_link.html.twig" with {'url':path('admin_shop_shipping_delete', { 'id':shipping.id })} %}
      </td>
    </tr>
  {% else %}
  <tr>
    <td colspan="5">There are no shippings at the time</td>
  </tr>
  {% endfor %}
  </tbody>
</table>
</form>
{% endblock %}
