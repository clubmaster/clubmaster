{% extends "ClubAccountBundle::base.html.twig" %}

{% block body %}
<p class="box">
  <a href="{{ path('club_account_adminaccount_new') }}" class="btn-create"><span>{% trans %}Create account{% endtrans %}</span></a>
  <a href="{{ path('club_account_adminledger_new') }}" class="btn-create"><span>{% trans %}Create annex{% endtrans %}</span></a>
</p>

<h2>{% trans %}Account{% endtrans %}</h2>

<table class="style">
  <thead>
    <tr>
      <th>{% trans %}Number{% endtrans %}</th>
      <th>{% trans %}Name{% endtrans %}</th>
      <th>{% trans %}Account Type{% endtrans %}</th>
      <th>{% trans %}Action{% endtrans %}</th>
    </tr>
  </thead>
  <tfoot>
    <tr class="bg">
      <td colspan="4">&#160;</td>
    </tr>
  </tfoot>
  <tbody>
  {% for account in accounts %}
    <tr>
      <td>{{ account.accountNumber }}</td>
      <td>{{ account.accountName }}</td>
      <td>{{ account.accountType }}</td>
      <td>
        {% include "ClubLayoutBundle:Default:edit_link.html.twig" with {'url':path('club_account_adminaccount_edit',{'id':account.id})} %}
        {% include "ClubLayoutBundle:Default:delete_link.html.twig" with {'url':path('club_account_adminaccount_delete',{'id':account.id})} %}
        {% include "ClubLayoutBundle:Default:ledger_link.html.twig" with {'url':path('club_account_adminledger_index',{'id':account.id})} %}
      </td>
    </tr>
  {% else %}
  <tr>
    <td colspan="4">{% trans %}There are no accounts.{% endtrans %}</td>
  </tr>
  {% endfor %}
  </tbody>
</table>
</form>
{% endblock %}
