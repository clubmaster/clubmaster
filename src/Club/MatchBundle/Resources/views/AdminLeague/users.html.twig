{% extends "ClubMatchBundle::base.html.twig" %}

{% block pagenav %}
<div class="navbar">
    <div class="navbar-inner">
        <ul class="nav">
            <li><a href="{{ path('club_match_adminleague_index') }}">{% trans %}Back to league{% endtrans %}</a></li>
        </ul>
    </div>
</div>
{% endblock %}

{% block body %}
<h2>{% trans %}Add players to league{% endtrans %}</h2>

<form method="post" action="{{ path('club_match_adminleague_usersadd', {'id':league.id}) }}" class="form-horizontal">
  <fieldset>
    <legend>{% trans %}Add player{% endtrans %}</legend>

    <p>{% trans %}Here you can add players for this tournament.{% endtrans %}</p>
    {{ form_widget(form) }}
    {% include "ClubLayoutBundle:Default:submit_button.html.twig" %}
  </fieldset>
</form>

<table class="table">
  <thead>
    <tr>
      <th>{% trans %}Number{% endtrans %}</th>
      <th>{% trans %}Name{% endtrans %}</th>
      <th>{% trans %}League{% endtrans %}</th>
      <th class="action">{% trans %}Action{% endtrans %}</th>
    </tr>
  </thead>
  <tfoot>
    <tr class="bg">
      <td colspan="4">&#160;</td>
    </tr>
  </tfoot>
  <tbody>
  {% for user in league.users %}
    <tr>
      <td>{{ user.memberNumber }}</td>
      <td>{{ user.name }}</td>
      <td>{{ league.name }}</td>
      <td>
        {% include "ClubLayoutBundle:Default:delete_link.html.twig" with {'url':path('club_match_adminleague_usersdelete', { 'id':league.id, 'user_id':user.id })} %}
      </td>
    </tr>
  {% else %}
  <tr>
    <td colspan="4">{% trans %}There are no users in the league.{% endtrans %}</td>
  </tr>
  {% endfor %}
  </tbody>
</table>
</form>

{% endblock %}
