{% extends "ClubLayoutBundle:Default:base.html.twig" %}

{% block header %}<h1>Location</h1>{% endblock %}

{% block body %}

<form method="post" action="{{ path('admin_location_config_batch') }}">
<table>
  <thead>
    <tr>
      <th>[x]</th>
      <th>Key</th>
      <th>Value</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tfoot>
    <tr class="bg">
      <td colspan="4" class="arrow-01">
        <select name="" class="input-text">
          <option value="">Delete selected</option>
          <option value="">Remove selected</option>
          <option value="">Rename selected</option>
          <option value="">Copy selected</option>
        </select>&nbsp;<input type="submit" value="OK" />
      </td>
    </tr>
  </tfoot>
  <tbody>
  {% for config in configs %}
    <tr>
      <td><input type="checkbox" /></td>
      <td>{{ config.config.configKey }}</td>
      <td>{{ config.value }}</td>
      <td>
        {% include "::edit_link.html.twig" with {'url':path('admin_location_config_edit', { 'id':config.id })} %}
      </td>
    </tr>
  {% else %}
  <tr>
    <td colspan="4">There are no configs for this location./td>
  </tr>
  {% endfor %}
  </tbody>
</table>
</form>
{% endblock %}
