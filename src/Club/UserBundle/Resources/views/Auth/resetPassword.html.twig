{% extends "ClubUserBundle:Auth:base.html.twig" %}

{% block body %}
        <div id="login-top"></div>

        <div id="login-box">

                <!-- Logo -->
                <p class="nom t-center"><a href="{{ path('homepage') }}"><img src="{{ asset('bundles/clublayout/images/logo.gif') }}" alt="ClubMaster" title="ClubMaster" /></a></p>

                {% include "ClubLayoutBundle:Default:flash.html.twig" %}

                <p class="msg info">Enter your new password below.</p>

                <!-- Form -->
                <form method="POST" action="{{ path('auth_reset', {'hash':forgot.hash}) }}">
                {{ form_widget(form) }}
                <table class="nom nostyle">
                        <tr>
                                <td colspan="2" class="t-right"><input type="submit" class="input-submit" value="Sign In &raquo;" /></td>
                        </tr>
                </table>
                </form>

        </div> <!-- /login-box -->

        <div id="login-bottom"></div>
{% endblock %}
