{% extends "ClubTournamentBundle::base.html.twig" %}

{% block body %}

<h2>{% trans %}Tournaments{% endtrans %}</h2>

<table class="style">
  <thead>
    <tr>
      <th>{% trans %}Tournament{% endtrans %}</th>
      <th>{% trans %}Players{% endtrans %}</th>
      <th>{% trans %}Start{% endtrans %}</th>
      <th>{% trans %}Action{% endtrans %}</th>
    </tr>
  </thead>
  <tfoot>
    <tr class="bg">
      <td colspan="4">&#160;</td>
    </tr>
  </tfoot>
  <tbody>
  {% for tournament in tournaments %}
    <tr>
      <td>{{ tournament.name }}</td>
      <td>{{ tournament.attends|length }}</td>
      <td>{{ tournament.startTime|club_datetime }}</td>
      <td>
        {% include "ClubLayoutBundle:Default:show_link.html.twig" with {'url':path('club_tournament_tournament_show', { 'id':tournament.id })} %}
      </td>
    </tr>
  {% else %}
  <tr>
    <td colspan="4">{% trans %}There are no tournaments.{% endtrans %}</td>
  </tr>
  {% endfor %}
  </tbody>
</table>

{% endblock %}
