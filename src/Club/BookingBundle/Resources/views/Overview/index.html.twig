{% extends "ClubBookingBundle::base.html.twig" %}

{% block javascripts %}
  <script src="{{ asset('bundles/clublayout/js/booking.js') }}" type="text/javascript"></script>
  <script>
  $(document).ready(function() {
    $("#date").datepicker({
      showOn: "button",
      buttonImage: "{{ asset('bundles/clublayout/images/icons/16x16/calendar.png') }}",
      buttonImageOnly: true,
      dateFormat: "yy-mm-dd",
      onSelect: function (dateText, inst) {
        location.href="{{ path('homepage') }}booking/"+dateText
      }
    });
  });
  </script>
{% endblock %}

{% block stylesheets %}
  <link rel="stylesheet" media="screen,projection" type="text/css" href="{{ asset('bundles/clublayout/css/booking.css') }}" />
{% endblock %}

{% block body %}
<form method="post">
<h2>{{ date|club_date('full') }} <input type="hidden" name="date" id="date" /></h2>
</form>

<p class="box">
{% for item in nav %}
  <a class="btn" href="{{ path('club_booking_overview_index', {'date':item|date('Y-m-d')}) }}"><span>{{ item|club_day }} &raquo;</span></a>
{% endfor %}
</p>

{% include "ClubBookingBundle:Overview:table.html.twig" %}

{% endblock %}
