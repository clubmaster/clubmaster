{% extends "ClubRankingBundle::base.html.twig" %}

{% block body %}

<h2>{% trans %}Users{% endtrans %}</h2>

{% include "ClubLayoutBundle:Default:ajax_user.html.twig" with {'search_field':'#form_user','input_id':'#form_user_id'} %}
<form method="post" action="{{ path('club_ranking_admingame_usersadd', {'id':game.id}) }}">
  <fieldset>
    <legend>{% trans %}Add user{% endtrans %}</legend>
    {{ form_widget(form) }}
    {% include "ClubLayoutBundle:Default:submit_button.html.twig" %}
  </fieldset>
</form>

<table class="style">
  <thead>
    <tr>
      <th>{% trans %}Number{% endtrans %}</th>
      <th>{% trans %}Name{% endtrans %}</th>
      <th>{% trans %}Action{% endtrans %}</th>
    </tr>
  </thead>
  <tfoot>
    <tr class="bg">
      <td colspan="3">&#160;</td>
    </tr>
  </tfoot>
  <tbody>
  {% for user in game.users %}
    <tr>
      <td>{{ user.memberNumber }}</td>
      <td>{{ user.name }}</td>
      <td>
        {% include "ClubLayoutBundle:Default:delete_link.html.twig" with {'url':path('club_ranking_admingame_usersdelete', { 'id':game.id, 'user_id':user.id })} %}
      </td>
    </tr>
  {% else %}
  <tr>
    <td colspan="4">{% trans %}There are no users in the game.{% endtrans %}</td>
  </tr>
  {% endfor %}
  </tbody>
</table>
</form>

{% endblock %}
