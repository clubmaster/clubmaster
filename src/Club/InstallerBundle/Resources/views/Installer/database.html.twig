{% extends "ClubLayoutBundle:Default:base_simple.html.twig" %}

{% block body %}
<h2>{% trans %}ClubMaster Installation{% endtrans %}</h2>

<p>{% trans %}Before you can continue your installation of ClubMaster, you will have to install the database.{% endtrans %}</p>

{% if app.session.hasFlash('error') %}
  <p>{% trans %}An error occur, please correct the problem and try again.{% endtrans %}</p>

  <p class="box">
    <a href="{{ path("club_installer_installer_database") }}" class="btn"><span>{% trans %}Try again{% endtrans %}</span></a>
  </p>

{% else %}
  <p class="box">
  {% if configuration.currentVersion == configuration.latestVersion %}
    <a href="{{ path("club_installer_installer_database") }}" class="btn"><span>{% trans %}Start installation{% endtrans %}</span></a>

  {% else %}
    <a href="{{ path("club_installer_installer_migrate") }}" class="btn"><span>{% trans %}Install database{% endtrans %}</span></a>

  {% endif %}
  </p>
{% endif %}
{% endblock %}
